# Environment Variables for VeryChain Deployment
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Your wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# VeryChain RPC URL
VERYCHAIN_RPC_URL=https://rpc.verylabs.io

# VeryChain Explorer API Key (for contract verification)
# Get this from https://veryscan.io
VERYSCAN_API_KEY=your_veryscan_api_key_here

# Deployer address (derived from private key)
DEPLOYER_ADDRESS=your_deployer_address_here

# Optional: Alternative RPC endpoints (if primary fails)
VERYCHAIN_RPC_URL_BACKUP=https://rpc-backup.verylabs.io
